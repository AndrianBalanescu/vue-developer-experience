{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@vuedx/*": ["packages/*/src/index.ts"],
      "test/*": ["test/*"]
    }
  },
  "include": [
    "types/*.ts",
    "packages/*/src/**/*.ts",
    "test/",
    "packages/typescript-standalone/src/index.js"
  ],
  "exclude": ["examples/**", "**/node_modules/**", "extensions/**"],
  "typeAcquisition": {
    "enable": false
  }
}
